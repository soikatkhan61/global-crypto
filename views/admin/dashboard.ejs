<%- include('./partials/header.ejs') %>

    <div class="main-content">
        <div class="row" style="color: white;">
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #28a745!important;" >
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Total Users
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                <%= totalUser[0].totalUser %> 
                            </div>
                            <i class='bx bx-shopping-bag'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #dc3545!important;">
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Total Withdraw
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                $<%= user.pending_balance ? user.pending_balance : '1000' %>
                            </div>
                            <i class='bx bx-chat'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #17a2b8!important;">
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Total Package Sell
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                <%= totalPkgSell[0].totalPkgSell %>
                            </div>
                            <i class='bx bx-line-chart'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #ffc107!important;">
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Trafic
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                45468
                            </div>
                            <i class='bx bx-user'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-3 col-md-6 col-sm-12">
                <!-- TOP PRODUCT -->
                <div class="box f-height">
                    <div class="box-header">
                        Package Analystic
                        <hr>
                    </div>
                    <div class="box-body">
                        <% if(pkg.length == 0){ %> 
                            <p>No package data available</p>
                        <% }else{ %> 
                            <ul class="product-list">
                                <% for(let p of pkg){ %> 
                                    <li class="product-list-item">
                                        <div class="item-info">
                                            <div class="item-name">
                                                <div class="product-name"><%= p.package_name%> </div>
                                                <div class="text-second">Price: <%= p.price%></div>
                                            </div>
                                        </div>
                                        <div class="item-sale-info">
                                            <div class="text-second">Total User</div>
                                            <div class="product-sales"><%= p.total_subscriber%></div>
                                        </div>
                                    </li>
                                <% }%> 
                            </ul>
                        <% } %> 
                       
                    </div>
                </div>
                <!-- TOP PRODUCT -->
            </div>
            <div class="col-4 col-md-6 col-sm-12">
                <!-- CATEGORY CHART -->
                <div class="box f-height">
                    <div class="box-body">
                        <div id="category-chart"></div>
                    </div>
                </div>
                <!-- END CATEGORY CHART -->
            </div>
            <div class="col-5 col-md-12 col-sm-12">
                <!-- CUSTOMERS CHART -->
                <div class="box f-height">
                    <div class="box-header">
                        customers
                    </div>
                    <div class="box-body">
                        <div id="customer-chart"></div>
                    </div>
                </div>
                <!-- END CUSTOMERS CHART -->
            </div>
            <div class="col-12">
                <!-- ORDERS TABLE -->
                <div class="box">
                    <div class="box-header">
                        Recent Joined Users
                    </div>
                    <% if(recentUser.length==0){ %> 
                        <p class="text-center">No users joined yet</p>
                    <% }else{ %> 
                        <div class="box-body overflow-scroll">
                            <table>
                                <thead>
                                    <tr>
                                        <th>username</th>
                                        <th>email</th>
                                        <th>verify status</th>
                                        <th>Joined on</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let r of recentUser){ %> 
                                        <tr>
                                            <td><a class="btn-link" href="/profile/<%= r.username %>"><%= r.username %></a> </td>
                                            <td>
                                                <%= r.email %>
                                            </td>
                                            <td><span class="badge badge-<%= r.isVerified == 1? 'success' : 'danger' %> rounded-pill d-inline"><%= r.isVerified == 1? 'Verified' : 'Non Verified' %> </span> </td>

                                            <td><%= moment(r.createdAt) %> </td>
                                        </tr>
                                    <% } %> 
                                </tbody>
                            </table>
                        </div>
                    <% } %> 
                    
                </div>
                <!-- END ORDERS TABLE -->
            </div>
        </div>
    </div>


    <%- include('./partials/footer.ejs') %>
        </body>

        </html>