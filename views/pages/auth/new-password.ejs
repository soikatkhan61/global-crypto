<%- include('../../partials/header/authHead.ejs') %>

    <div class="container-fluid">
        <div class="container py-5">
                <h3 class="text-center text-light mb-5">Enter new Password !</h3>

                <form action="/auth/new-password" method="post">
                    <div class="d-flex justify-content-center">
                        <div class="input-group mb-4" style="max-width: 500px;">
                            <input type="email" value="<%= email %> " name="email" hidden>
                            <div class="input-group-append"> <span class="input-group-text"><i class="fas fa-key"></i></span> </div>
                            <input  type="text" name="password" class="form-control input_pass" placeholder="Enter New Password" required>
                        </div>
                    </div>
                   
    
                    <div class="d-flex justify-content-center mt-2 login_container">
                        <button type="submit" class="btn btn-success">Set password</button>
                    </div>
                </form>
                
        </div>
    </div>


    <%- include('../../partials/footer.ejs') %>

        </body>

        </html>