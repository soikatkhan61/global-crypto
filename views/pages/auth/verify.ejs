<%- include('../../partials/header/authHead.ejs') %>

    <div class="container-fluid">
        <div class="container py-5">
                <h3 class="text-center">One More Step!
                </h3> 
                <p class="text-center">You need to verify your email adress!</p>
                <p class="text-center fw-bold"><%= email %></p>
                <center> <a href="/auth/send-verification-code/<%= email %>" class="btn btn-primary">Send Me Code</a></center>
               
                <p class="text-center mt-5">if you get the code then submit here!</p>
                <div  class=" w-100  d-flex justify-content-center pb-4">
                    <form action="/auth/verify" method="post"  id="verify_box" >
                        <input id="email" name="email" type="text" value="<%= email %>" hidden>
                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <input name="verify_id" type="text" id="code" class="form-control" />
                            <label class="form-label" for="form4Example1">4 digit code</label>
                        </div>
    
                        <!-- Submit button -->
                        <button id="submitBtn" class="btn btn-success btn-block mb-4">Verify</button>
                    </form>
                </div>
        </div>
    </div>


    <%- include('../../partials/footer.ejs') %>

        </body>

        </html>