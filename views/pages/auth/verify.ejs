<%- include('../../partials/header/authHead.ejs') %>

    <div class="container-fluid">
        <div class="container py-5">
                <h3 class="text-center text-light">One More Step!
                </h3> 
                <p class="text-center text-light">You need to verify your email adress!</p>
                <p class="text-center fw-bold text-light"><%= email %></p>
                <center> <a href="/auth/send-verification-code/<%= email %>" class="btn btn-primary">Send Me Code</a></center>
               
                <p class="text-center mt-5">if you get the code then submit here!</p>
                <div  class=" w-100  d-flex justify-content-center pb-4">
                    <form action="/auth/verify" method="post"  id="verify_box" >
                        <input id="email" name="email" type="text" value="<%= email %>" hidden>
                        <!-- Name input -->
                        <div class="input-group mb-4">
                            <div class="input-group-append"> <span class="input-group-text"><i class="fas fa-key"></i></span> </div>
                            <input id="pass" type="text" name="verify_id" class="form-control input_pass" placeholder="4 digit code" required>
                        </div>
                        <!-- Submit button -->
                        <button id="submitBtn" class="btn login_btn btn-block mb-4">Verify</button>
                    </form>
                </div>
        </div>
    </div>


    <%- include('../../partials/footer.ejs') %>

        </body>

        </html>