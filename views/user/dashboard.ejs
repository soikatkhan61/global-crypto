<%- include('./user_partials/header.ejs') %>

    <div class="main-content">
        <div class="row" style="color: white;">
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #28a745!important;" >
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Balance
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                <%= user.balance ? user.balance : '0' %> TK
                            </div>
                            <i class='bx bx-shopping-bag'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #dc3545!important;">
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Pending Balance
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                <%= user.pending_balance ? user.pending_balance : '1000' %> TK
                            </div>
                            <i class='bx bx-chat'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #17a2b8!important;">
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Level 1
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                <%= user.refer_list ? user.refer_list.length : '0' %>
                            </div>
                            <i class='bx bx-line-chart'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
            <div class="col-3 col-md-6 col-sm-12">
                <div class="box box-hover" style="background-color: #ffc107!important;">
                    <!-- COUNTER -->
                    <div class="counter">
                        <div class="counter-title">
                            Level 3
                        </div>
                        <div class="counter-info">
                            <div class="counter-count">
                                5645
                            </div>
                            <i class='bx bx-user'></i>
                        </div>
                    </div>
                    <!-- END COUNTER -->
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-3 col-md-6 col-sm-12">
                <!-- TOP PRODUCT -->
                <div class="box f-height">
                    <div class="box-header">
                        Top Users
                    </div>
                    <div class="box-body">
                        <ul class="product-list">
                            <li class="product-list-item">
                                <div class="item-info">
                                    <img src="/images/thumb-7.jpg" alt="product image">
                                    <div class="item-name">
                                        <div class="product-name">John Doe</div>
                                        <div class="text-second">level 1</div>
                                    </div>
                                </div>
                                <div class="item-sale-info">
                                    <div class="text-second">Profit</div>
                                    <div class="product-sales">$5,930</div>
                                </div>
                            </li>
                            <li class="product-list-item">
                                <div class="item-info">
                                    <img src="/images/sneaker.jpg" alt="product image">
                                    <div class="item-name">
                                        <div class="product-name">John Doe</div>
                                        <div class="text-second">level 4</div>
                                    </div>
                                </div>
                                <div class="item-sale-info">
                                    <div class="text-second">Profit</div>
                                    <div class="product-sales">$5,930</div>
                                </div>
                            </li>
                            <li class="product-list-item">
                                <div class="item-info">
                                    <img src="/images/headphone.jpg" alt="product image">
                                    <div class="item-name">
                                        <div class="product-name">John Bob</div>
                                        <div class="text-second">level 2</div>
                                    </div>
                                </div>
                                <div class="item-sale-info">
                                    <div class="text-second">Profit</div>
                                    <div class="product-sales">$5,930</div>
                                </div>
                            </li>
                            <li class="product-list-item">
                                <div class="item-info">
                                    <img src="/images/backpack.jpg" alt="product image">
                                    <div class="item-name">
                                        <div class="product-name">Michel</div>
                                        <div class="text-second">level 1</div>
                                    </div>
                                </div>
                                <div class="item-sale-info">
                                    <div class="text-second">Profit</div>
                                    <div class="product-sales">$5,930</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- TOP PRODUCT -->
            </div>
            <div class="col-4 col-md-6 col-sm-12">
                <!-- CATEGORY CHART -->
                <div class="box f-height">
                    <div class="box-body">
                        <div id="category-chart"></div>
                    </div>
                </div>
                <!-- END CATEGORY CHART -->
            </div>
            <div class="col-5 col-md-12 col-sm-12">
                <!-- CUSTOMERS CHART -->
                <div class="box f-height">
                    <div class="box-header">
                        customers
                    </div>
                    <div class="box-body">
                        <div id="customer-chart"></div>
                    </div>
                </div>
                <!-- END CUSTOMERS CHART -->
            </div>
            <div class="col-12">
                <!-- ORDERS TABLE -->
                <div class="box">
                    <div class="box-header">
                        Recent Joined Users
                    </div>
                   <% if(recentUser.length == 0){ %> 
                   <div class="py-3">
                    <h4>No users join yet to your account! Spread your link!</h4>
                    <a class="btn btn-primary" href="/user/my-refer-link">Your Refer Link</a>
                   </div>
                   <% }else{ %> 
                    <div class="box-body overflow-scroll">
                        <table>
                            <thead>
                                <tr>
                                    <th>username</th>
                                    <th>Joined On</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let r of recentUser){ %> 
                                    <tr>
                                        <td><a class="btn-link" href="/profile/<%= r.username %> "><%= r.username %> </a></td>
                                        <td>
                                           <%= r.createdAt.toDateString() %> 
                                        </td>
                                    </tr>
                                <% }%> 
                            </tbody>
                        </table>
                    </div>
                   <% } %> 
                </div>
                <!-- END ORDERS TABLE -->
            </div>
        </div>
    </div>


    <%- include('./user_partials/footer.ejs') %>
        </body>

        </html>